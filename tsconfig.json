{
  "compilerOptions": {
    // Modern JavaScript target
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "ES2022"],
    
    // Module system
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    
    // JSX configuration for React 19
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    
    // Strict type checking (ENABLED but with practical settings)
    "strict": true,
    "noImplicitAny": false, // Disabled for existing codebase compatibility
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false, // Disabled to avoid too many warnings
    "noUnusedParameters": false, // Disabled to avoid too many warnings
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": false, // Disabled for practical use
    "noUncheckedIndexedAccess": false, // Disabled for practical use
    
    // Additional checks (practical settings)
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "noFallthroughCasesInSwitch": true,
    
    // Interop
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    
    // Build configuration
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "skipLibCheck": true,
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.cache/.tsbuildinfo",
    
    // Path configuration
    "baseUrl": ".",
    "outDir": "dist",
    
    // Type definitions
    "types": [
      "node",
      "vitest/globals",
      "@testing-library/jest-dom"
    ],
    
    // Path mapping (updated to match actual structure)
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@models/*": ["src/models/*"],
      "@utils/*": ["src/utils/*"],
      "@hooks/*": ["src/hooks/*"],
      "@effects/*": ["src/effects/*"],
      "@styles/*": ["src/styles/*"],
      "@types/*": ["src/types/*"],
      "@demo/*": ["src/demo/*"],
      "@examples/*": ["src/examples/*"]
    }
  },
  "include": [
    "src/**/*",
    "types/**/*",
    "vitest.config.mts",
    "vite.config.mts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "build",
    "cypress",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
