{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "es2023"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.cache/tsbuildinfo",
    "rootDir": "src",
    "baseUrl": ".",
    "types": [
      "node",
      "@types/react",
      "@types/react-dom",
      "@testing-library/jest-dom",
      "react-router-dom",
      "vitest/globals"
    ],
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@models/*": ["src/models/*"],
      "@effects/*": ["src/effects/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"]
    },
    "plugins": []
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "rollup.config.mjs",
    "cypress",
    "cypress.config.ts",
    "src/demo/**",
    "src/examples/**",
    "src/**/__tests__/**",
    "src/**/*.test.*",
    "src/**/*.spec.*",
    "src/**/*.stories.*",
    "src/test-setup.js",
    "src/index.tsx",
    "src/styles/types.ts"
  ],
  "files": ["src/react-chrono.ts"]
}
